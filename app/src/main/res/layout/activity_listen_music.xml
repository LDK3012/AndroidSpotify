<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#111111"
    android:paddingLeft="18dp"
    android:paddingTop="23dp"
    android:paddingRight="18dp"
    android:paddingBottom="10dp"
    tools:context=".View.ListenMusic_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/down_btn"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:background="#111"
            android:rotation="-90"
            android:scaleType="fitEnd"
            android:src="@drawable/downbutton" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/vertical_dots_btn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="#111111"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/vertical_dots" />

    </LinearLayout>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageSong"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
        app:shapeAppearanceOverlay="@style/roundedImageViewRounded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nameSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="20dp"
                android:text="" />

            <TextView
                android:id="@+id/nameArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C6C6C6"
                android:text="" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#111111"
            android:scaleType="fitEnd"
            android:src="@drawable/addbutton"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:background="#111111"
            android:scaleType="fitEnd"
            android:src="@drawable/checked" />
    </LinearLayout>

    <SeekBar
        android:id="@+id/sBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progressTint="@color/white"
        android:thumbTint="@color/white"
        android:trackTint="#9B9B9B"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:layout_marginTop="27dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/startTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C6C6C6"
            android:textSize="15dp"
            android:text="0:00" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C6C6C6"
            android:textSize="15dp"
            android:text="3:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_previous"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:src="@drawable/previousbutton" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_play"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:src="@drawable/playbutton" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_pause"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleX="1.1"
            android:scaleY="1.1"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:src="@drawable/pausebutton" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_next"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"
            android:src="@drawable/nextbutton" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2" />
    </LinearLayout>
</LinearLayout>